<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Day2_Xamarin_ITI.DeletePage"
            NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Name}" Placeholder="Name of Dish"></Entry>
            <Entry Text="{Binding Image}" Placeholder="Image File Name"></Entry>
            <Entry Text="{Binding Price}" Keyboard="Numeric" Placeholder="Price"></Entry>
            <Button Clicked="Button_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>