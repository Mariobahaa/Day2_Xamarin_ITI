<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Day2_Xamarin_ITI.UpdatePage"
            NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Name}" Placeholder="Name"></Entry>
            <Entry Text="{Binding ShirtNumber}"  Keyboard="Numeric" Placeholder="Shirt"></Entry>
            <Entry Text="{Binding ClubId}" Keyboard="Numeric" Placeholder="Club Id"></Entry>
            <Button Clicked="Button_Clicked" Text="Update" BackgroundColor="DeepSkyBlue"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>